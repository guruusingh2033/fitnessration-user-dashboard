@import '../_header'
userdashboard > orders
	+on-desktop()
		.content
			width auto
	h3
		r-margin 40px 0 20px 0
		r-font-size 21px 14px
		text-align center
		font-weight bold
		font-family 'League Spartan'
		text-transform uppercase
	force-device = 'mobile'
	order
		bundle
			bundle_base()
		order_item_mobile()
	force-device = null
	.current-order
		padding 1px 0 20px 0
		d-padding-bottom 60px
		background white
		+on-desktop()
			order
				width 940px
				margin 0 auto 31px
				position relative
				padding 46px 311px 0 0
				overflow hidden
				font-size 14.26px
				.number
					position absolute
					width 100%
					top 0
				.bundles
					width 100%
					border-right 1px solid $border-color
				.extra
					width 100%
				bundle
					display flex
					flex-wrap wrap
					bundle-summary
						border-right 1px solid $border-color
						font-size 14.26px
					bundle-summary, bundle-meals
						flex 1 1 0
					bundle-allergies
						width 100%
				.order-info
					display flex
					flex-wrap wrap
					border-right 1px solid $border-color
					.delivery-address
						border-left 1px solid $border-color
					.delivery-date-time, .delivery-address
						flex 1 1 0
					.extra
						width 100%
						border-bottom none
					> .total
						position absolute
						width 311px
						right 0
						top 46px
					.transaction-info
						width 310px
						position absolute
						top 46px + 94px
						bottom 50px
						right 0
				.reorder
					position absolute
					right 0
					bottom 0
					size 311px 50px
				.hide-details, .show-details
					display none
	.order-history
		padding-top 1px
		background-color #FBF4ED
		order
			&:not(.show-details)
				bundle-meals
					border-bottom none
				bundle-allergies, .order-info, .hide-details
					display none
			&.show-details
				.show-details
					display none
		+on-desktop()
			padding-bottom 100px
			> ul
				width 940px
				margin 0 auto
				display flex
				flex-wrap wrap
				justify-content center
				> li
					width 300px
					margin-right 20px
					margin-bottom 20px
					&:nth-child(3n)
						margin-right 0
					order
						margin 0
		+on-mobile()
			> ul > li
				margin-bottom 30px
	order
		container()
		display block
		margin 0 15px
		+on-mobile()
			&:not(.show-details)
				bundle-meals
					border-bottom none
				bundle-allergies, .order-info, .hide-details
					display none
			&.show-details
				.show-details
					display none
		.number, .transaction-info
			padding-left-right 20px
		.number
			display block
			padding-top-bottom 13px
			border-bottom 1px solid $border-color
			font-size 14.48px
			font-weight bold
		.transaction-info
			padding-top-bottom 17px
			border-top 1px solid $border-color
			.line:not(:first-child)
				margin-top 10px
			.value
				color #A0A0A0
			.payment-method
				font-size 14.45px
			.transation-id
				font-size 12.52px
		> a, > button
			order_button()
			&.reorder
				order_button_primary()
